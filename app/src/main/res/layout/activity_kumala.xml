    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView18"
        android:layout_below="@+id/textView14"
        android:layout_marginTop="11dp"
        app:srcCompat="@android:drawable/ic_menu_recent_history" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView21"
        android:layout_below="@+id/imageView21"
        android:layout_marginTop="11dp"
        app:srcCompat="@android:drawable/ic_menu_call" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView18"
        android:layout_toEndOf="@+id/imageView18"
        android:text="Jalan K.H. Ahmad Muksin, Timbau, Timbau, Tenggarong, Tenggarong, Kabupaten Kutai Kartanegara, Kalimantan Timur 75513"
