    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView15"
        android:layout_alignTop="@+id/imageView22"
        android:text="0811-5940-045"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView22"
        android:text="Pulau Kumala merupakan daerah delta di Sungai Mahakam yang memanjang di sebelah Barat Kota Tenggarong, Kabupaten Kutai Kartanegara. Dimulai pada tahun 2000, Pulau Kumala dibangun menjadi kawasan wisata. Taman Wisata Pulau Kumala berjarak sekitar 27 km dari Kota Samarinda"
        android:textColor="@android:color/background_dark"
        android:textSize="15sp" />


</RelativeLayout>

